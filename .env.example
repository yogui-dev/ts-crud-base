# Configuración del Servidor
PORT=3000
NODE_ENV=development

# Configuración de Base de Datos (ejemplo con MongoDB)
# MONGODB_URI=mongodb://localhost:27017/ts-crud-base
# MONGODB_NAME=ts-crud-base

# Configuración de Autenticación (ejemplo con JWT)
# JWT_SECRET=tu_clave_secreta_muy_segura
# JWT_EXPIRES_IN=24h
# REFRESH_TOKEN_SECRET=tu_otra_clave_secreta
# REFRESH_TOKEN_EXPIRES_IN=7d

# Configuración de CORS (opcional)
# CORS_ORIGIN=http://localhost:3001
# CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_CREDENTIALS=true

# Configuración de Logs (opcional)
# LOG_LEVEL=info
# LOG_TO_FILE=true
# LOG_FILE_PATH=logs/app.log

# Configuración de Seguridad (recomendado para producción)
# RATE_LIMIT_WINDOW_MS=15*60*1000
# RATE_LIMIT_MAX=100
# HELMET_ENABLED=true
# XSS_ENABLED=true

# Configuración de Correo (ejemplo para desarrollo)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu-email@gmail.com
# SMTP_PASS=tu-contraseña
# EMAIL_FROM="TS CRUD Base" <no-reply@tudominio.com>
